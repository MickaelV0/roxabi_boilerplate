# Application
WEB_PORT=3000
PORT=4000
APP_URL=http://localhost:3000
API_URL=http://localhost:4000
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=debug

# Database
# Auto-injected by Neon Marketplace integration on Vercel — manual setup only needed for local dev
DATABASE_URL=postgresql://roxabi:roxabi@localhost:5432/roxabi

# Authentication (Better Auth)
BETTER_AUTH_SECRET=change-me-to-a-random-32-char-string
BETTER_AUTH_URL=http://localhost:4000
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# Auto-injected by Resend Marketplace integration on Vercel — manual setup only needed for local dev
# RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting & Upstash Redis
# Auto-injected by Upstash Marketplace integration on Vercel — manual setup only needed for local dev
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# RATE_LIMIT_ENABLED=true
# SWAGGER_ENABLED=true
# RATE_LIMIT_GLOBAL_TTL=60000
# RATE_LIMIT_GLOBAL_LIMIT=60
# RATE_LIMIT_AUTH_TTL=60000
# RATE_LIMIT_AUTH_LIMIT=5
# RATE_LIMIT_AUTH_BLOCK_DURATION=300000
# RATE_LIMIT_API_TTL=60000
# RATE_LIMIT_API_LIMIT=100

# Claude Code
CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1

# External Services
# GITHUB_TOKEN=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Public (exposed to client)
VITE_ENABLE_DEMO=true
VITE_GITHUB_REPO_URL=https://github.com/MickaelV0/roxabi_boilerplate

