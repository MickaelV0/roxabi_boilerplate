# Application
NODE_ENV=development
WEB_PORT=3000
API_PORT=4000
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database
DATABASE_URL=postgresql://roxabi:roxabi@localhost:5432/roxabi

# Authentication (Better Auth)
BETTER_AUTH_SECRET=change-me-to-a-random-32-char-string
BETTER_AUTH_URL=http://localhost:3001
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# RESEND_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# Claude Code
CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1

# External Services
# GITHUB_TOKEN=
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Public (exposed to client)
VITE_GITHUB_REPO_URL=https://github.com/MickaelV0/roxabi_boilerplate

# =============================================================================
# Production overrides (VPS deployment)
# Copy these to /opt/roxabi/.env on the VPS and fill in real values
# =============================================================================
