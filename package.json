{
  "name": "roxabi-boilerplate",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "turbo dev",
    "dev:clean": "fuser -k ${NITRO_PORT:-42069}/tcp ${PORT:-4000}/tcp ${WEB_PORT:-3000}/tcp 2>/dev/null || true",
    "build": "turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:unit": "turbo test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:cache": "rm -rf apps/web/node_modules/.vite .turbo apps/*/.turbo packages/*/.turbo",
    "docs": "turbo dev --filter=@repo/web",
    "i18n:validate": "bun run scripts/validate-translations.ts",
    "typecheck:affected": "turbo run typecheck --filter=...[origin/main]",
    "test:affected": "turbo run test --filter=...[origin/main]",
    "license:check": "bun run tools/license-checker.ts",
    "check:env": "bun run scripts/check-env-sync.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "lefthook": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.9",
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "shiki": "^3.22.0"
  }
}
